<body>

    <!-- Importing Navbar -->
    <?php include "../header/header.php" ?>

    <?php
    if ($colors->num_rows > 1 || $sizes->num_rows > 1) {
        echo "
        <div class='store-container'>
            <div class='store-filter-section'>
                <p class='store-filter-title'>Filter Products</p>
                <form method='POST' action=''>
                    <label for='color' id='select-color-title'>Select Color:</label>
                        <div class='form-colors'>";
        while ($color = mysqli_fetch_assoc($colors)) {
            echo "
                        <div class='filter-form-single-color'>
                            <input type='checkbox' name='color'>
                            <label for=''>" . $color['color'] . "</label>
                        </div>";
        }
        echo "
                    </div>
                    <input type='submit' value='Filter Colors'>
                </form>


        

                <form method='POST' action=''>
                    <label for='size' id='select-size-title'>Select Size:</label>
                    <div class='form-sizes'>";
        while ($size = mysqli_fetch_assoc($sizes)) {
            echo "  
                        <div class='filter-form-single-size'>
                            <input type='checkbox' name='size'>
                            <label for=''>" . $size['size'] . "</label>
                        </div>";
        }
        echo "
                    </div>
                    <input type='submit' value='Filter Sizes'>
                </form>
            </div>
            <div class='store-product-display'>";
    }

    if ($results->num_rows > 1) {
        while ($product_details = mysqli_fetch_assoc($results)) {
            echo "
                <div class='store-product-card'>
                    <form action=''>
                        <a href='../productdetails/productdetails.php?product_id=" . $product_details['product_id'] . "'>
                            <div class='store-product-card-image'><img src='" . $product_details['product_img_path'] . "' alt='Product Image'></div>
                            <div class='store-product-card-name'>" . $product_details['product_name'] . "</div>
                        </a>
                        <div class='store-product-card-pricing'>
                            <div class='store-product-card-price'>$ " . $product_details['product_price'] . "</div>
                            <div class='store-product-card-cart'>
                                <a href='../shoppingcart/shoppingcart.php?product_id=" . $product_details['product_id'] . "'><i class='fa-regular fa-heart'></i></a>
                                <a href='../wishlist/wishlist.php?product_id=" . $product_details['product_id'] . "'><i class='fa-regular fa-heart'></i></a>
                            </div>
                        </div>
                    </form>
                </div>";
        }
        echo "
            </div>
        </div>";
    }
    ?>




